<div class="container">
  <div class="row">
    <div class="span4 offset4 form-frame">

      <h2>Sign up</h2>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <% if session[:pending_organisation_id] %>
            <input type="hidden" name="user[pending_organisation_id]" value = "<%= session[:pending_organisation_id] %>">
          <% end %>
          <% if session[:proposed_org] %>
            <input type="hidden" name="user[proposed_org]" value = "<%= session[:proposed_org] %>" >
          <% end %>

          <div><%= f.label :email %>
            <%= f.email_field :email, :class => 'input-block-level', :autofocus => true %></div>

          <div><%= f.label :password %>
            <%= f.password_field :password, :class => 'input-block-level' %></div>

          <div><%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, :class => 'input-block-level' %></div>

          <div><%= f.submit 'Sign up', :class => 'btn btn-primary btn-block' %></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>