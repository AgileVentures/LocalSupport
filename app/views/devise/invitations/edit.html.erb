<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 form-frame">
      <p>Welcome to the <strong>Harrow Community Network</strong>! Please set a password for your account before continuing.</p>
      <h2>Set your password</h2>

      <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :put} do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :invitation_token %>

          <div><%= f.label :password %>
            <%= f.password_field :password, :class => 'input-block-level', :autofocus => true %></div>

          <div><%= f.label :password_confirmation, 'Confirm new password' %>
            <%= f.password_field :password_confirmation, :class => 'input-block-level' %></div>

          <p><%= f.submit t("devise.invitations.edit.submit_button"), :class => "btn btn-primary btn-block" %></p>
      <% end %>
    </div>
  </div>
</div>
