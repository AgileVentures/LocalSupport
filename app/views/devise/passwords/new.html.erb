<div class="container">
  <div class="row">
    <div class="span4 offset4 form-frame">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post}) do |f| %>
        <%= devise_error_messages! %>

        <div id="reset_password">
          <%= f.label 'user_retrieval_email', "Please enter your email address below" %>
          <%= f.email_field :email, :id => "user_retrieval_email", :class => 'input-block-level', :autofocus => true %>
          <%= f.submit "Send me reset password instructions", :class => "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
