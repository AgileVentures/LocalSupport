<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2 form-frame">

      <h2>Sign in</h2>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <% if session[:pending_organisation_id] %>
              <input type="hidden" name="pending_organisation_id" value = "<%= session[:pending_organisation_id] %>">
          <% end %>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, :class => 'form-control', :autofocus => true %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, :class => 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me, :style => "display: inline;" %></div>
          <% end -%> <br>

          <div class="form-group">
            <%= f.submit 'Sign in', :class => 'btn btn-primary btn-block' %>
          </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
