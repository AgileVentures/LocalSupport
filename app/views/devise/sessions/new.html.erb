<div class="container">
  <div class="row">
    <div class="span4 offset4 form-frame">

      <h2>Sign in</h2>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <% if session[:pending_organisation_id] %>
              <input type="hidden" name="pending_organisation_id" value = "<%= session[:pending_organisation_id] %>">
          <% end %>
          <div><%= f.label :email %>
            <%= f.email_field :email, :class => 'input-block-level', :autofocus => true %></div>

          <div><%= f.label :password %>
            <%= f.password_field :password, :class => 'input-block-level' %></div>

          <% if devise_mapping.rememberable? -%>
              <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :style => "display: inline;" %></div>
          <% end -%> <br>

          <div><%= f.submit 'Sign in', :class => 'btn btn-primary btn-block' %></div>
      <% end %>

      <%= render "devise/shared/links" %>   </div>
  </div>
</div>
