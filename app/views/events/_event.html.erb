<div class="event-item">
    <div class="event-title"><u><%= link_to event.title, event_path(event), class: "event-link" %></u></div>
    <div class="event-start-date">
      Start: <%= event.start_date.strftime("%A, %B %d, %Y at %H:%M")  %></div>
    <div class="event-end-date">
      End: <%= event.end_date.strftime("%A, %B %d, %Y at %H:%M") %>
    </div>
  <div>Recurring: <%= event.recurring %></div>
  <div class="event-description"><%= event.description %></div>
</div>
<hr />
