<div class="event-box">
  <h2><%=@event.title%></h2>
  <p><%=@event.description%></p>
  <p><%=@event.organisation.nil? ? "" : @event.organisation.description %></p>
  <p>Start date: <%=@event.start_date.strftime("%A, %B %d, %Y at %H:%M")%></p>
  <p>End date: <%=@event.end_date.strftime("%A, %B %d, %Y at %H:%M")%></p>
</div>
<%= render partial: 'shared/map_scripts', locals: {markers: @markers} %>
