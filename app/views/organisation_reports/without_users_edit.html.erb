<p><b> The Following email will be sent when a user is invited: </b></p>
<div class="well" id="preview_email">
  <%= form_for @mail_template do |f| %>
    <%= f.label :body, 'Message' %>
    <%= f.text_area :body, :class => "wide_form", :cols => "10", :rows => "10"  %><br>
    <%= f.label :footnote, 'Footnote' %>
    <%= f.text_area :footnote, :class => "wide_form", :cols => "10", :rows => "5" %><br>
    <%= f.submit 'Update template' %>
  <% end %>
</div>
<table class="table table-hover sortable">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th style="text-align: center;"></th>
  </tr>
  </thead>
  <tbody>
  <% @orphans.each do |organisation| %>
      <tr id="<%= organisation.id %>">
        <td><%= link_to organisation.name, organisation_path(organisation) %></td>
        <td><%= organisation.email %></td>
        <td class="response" style="text-align: center;">
          <input type="checkbox" data-id="<%= organisation.id %>" data-email="<%= organisation.email %>"/>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>