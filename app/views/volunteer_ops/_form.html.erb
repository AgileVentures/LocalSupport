<%= form_for(@volunteer_op, url: submission_url ) do |f| %>
  <% if @volunteer_op.errors.any? %>
    <div class= "text-error", id="error_explanation">
      <%= pluralize(@volunteer_op.errors.count, "error") %> prohibited this volunteer_op from being saved:
      <ul>
        <% @volunteer_op.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %> 
  <div class="field">
    <%= f.label :title, :style => "margin-top: 16px;" %>
    <%= f.text_field :title, :class => "wide_form" %>
  </div>
  <div class="field">
    <%= f.label :description , :style => "margin-top: 16px;" %>
    <%= f.text_area :description, :class => "wide_form" %>
  </div>
  <div class="field">
    <%= f.check_box :different_address, { :style => "float: left;" } %>
    <%= label_tag 'volunteer_op_different_address', 'Volunteer opportunity on different location?', :style => "margin-top: 16px; margin-left: 20px;" %>
  </div>
  <div id="volunteer_op_diff" style="<%= has_diff_location( @volunteer_op ) ? "display:block;" : "display:none;" %>">
    <div class="field">
      <%= f.label :address , 'Address', :style => "margin-top: 16px;" %>
      <%= f.text_field :address, :class => "wide_form" %>    
    </div>
    <div class="field">
      <%= f.label :postcode , 'Postcode', :style => "margin-top: 16px;" %>
      <%= f.text_field :postcode, :class => "wide_form" %>    
    </div>    
  </div>
  <div class="actions" style="margin-top: 16px;">
    <%= f.submit button_text(@volunteer_op), class: 'btn btn-primary' %>
  </div>
<% end %>
<% render partial: 'shared/map_scripts', locals: {markers: markers} %>
