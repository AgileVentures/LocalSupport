<%= form_for(@volunteer_op, url: submission_url ) do |f| %>
  <% if @volunteer_op.errors.any? %>
    <div class= "text-error", id="error_explanation">
      <%= pluralize(@volunteer_op.errors.count, "error") %> prohibited this volunteer_op from being saved:
      <ul>
        <% @volunteer_op.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %> 
  <div class="field">
    <%= f.label :title, :style => "margin-top: 16px;" %>
    <%= f.text_field :title, :class => "wide_form" %>
  </div>
  <div class="field">
    <%= f.label :description , :style => "margin-top: 16px;" %>
    <%= f.text_area :description, :class => "wide_form" %>
  </div>
  <% if has_diff_volunteer_op_location? @volunteer_op %>
    <div class="field">
      <%= check_box_tag 'has_diff_loc', 1, true, :style => "float: left;" %>
      <%= label_tag 'has_diff_loc', 'Volunteer opportunity on different location?', :style => "margin-top: 16px; margin-left: 20px;" %>
    </div>
    <div class="field" id="volunteer_op_diff" style="display:block;">
      <%= f.label :volunteer_op_loc , 'Volunteer opportunity address', :style => "margin-top: 16px;" %>
      <%= f.text_field :volunteer_op_loc, :class => "wide_form" %>    
    </div>
    <% else %>
    <div class="field">
      <%= check_box_tag 'has_diff_loc', 1, false, :style => "float: left;" %>
      <%= label_tag 'has_diff_loc', 'Volunteer opportunity on different location?', :style => "margin-top: 16px; margin-left: 20px;" %>
    </div>
    <div class="field" id="volunteer_op_diff" style="display:none;">
      <%= f.label :volunteer_op_loc , 'Volunteer opportunity address', :style => "margin-top: 16px;" %>
      <%= f.text_field :volunteer_op_loc, :class => "wide_form" %>    
    </div>
  <% end %>
  <div class="actions" style="margin-top: 16px;">
    <%= f.submit button_text(@volunteer_op), class: 'btn btn-primary' %>
  </div>
<% end %>
<% render partial: 'shared/map_scripts', locals: {markers: markers} %>
