<br>
<div id="orgs_scroll" style="height:410px;width:100%;border:1px solid #ccc;overflow:scroll;">
  <div class="table table-bordered">
    <table>
      <% @volunteer_ops.each do |op| %>
          <tr>
            <td>
              <strong><%= link_to op.title, op %></strong><br/>

              <div id="organisations">
                <small><%= link_to op.organisation.name, op.organisation %></small>
                <br/>
              </div>
              <%= smart_truncate(op.description) %>
              <br/>
            </td>
          </tr>
      <% end %>
    </table>
    <br>
    <%if feature_active? :doit_volunteer_opportunities%>
      <strong>Do-it ops</strong>
      <table>
         <%if @doit_orgs && @doit_orgs.length>0%>
           <% @doit_orgs.each do |op| %>
              <tr>
                <td>
                  <strong> <%= link_to op.name, "https://do-it.org/opportunities/#{op.opportunity_id}" %> </strong><br>

                  <div id="organisations">
                    <small><%= link_to op.org_name, "#" %></small>
                    <br/>
                  </div>
                  <%= smart_truncate(op.description) %>
                </td>
              </tr>
          <% end %>
        <%end%>
      </table>
    <%end%>
  </div>
</div>
<% render partial: 'shared/map_scripts', locals: {markers: @markers} %>
