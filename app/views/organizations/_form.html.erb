<%= form_for(@organization) do |f| %>
    <% if @organization.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @organization.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <table class="org_table" >
      <tbody>
      <tr>
        <td data-toggle="tooltip" title="Enter a unique name">
          <%= f.text_area :name, :size => "50x2", :class => "org_form org_h3" %>
        </td>
        <td class="borderless">
          <input type="checkbox" disabled checked = "checked" value="">
        </td>
      </tr>
      <tr>
        <td class="borderless" data-toggle="tooltip" title="Enter a full description here. When an individual searches this database all words in this description will be searched.">
          <%= f.text_area :description, :class => "org_form", :cols => "10", :rows => "10" %>
        </td>
        <td class="borderless">
          <input type="checkbox" disabled checked = "checked" value="">
        </td>
      </tr>
      <tr>
        <td data-toggle="tooltip" title="Enter a complete address">
          <%= f.text_field :address, :class => "org_form" %>
        </td>
        <td class="borderless" data-toggle="tooltip" title="To make your full address visible to the public check this box">
          <%= f.check_box :publish_address %>
        </td>
      </tr>
      <tr>
        <td class="borderless" data-toggle="tooltip" title="Make sure post code is accurate">
          <%= f.text_field :postcode, :class => "org_form", :placeholder => "Enter post code" %>
        </td>
        <td class="borderless">
          <input type="checkbox" disabled checked = "checked" value="">
        </td>
      </tr>
      <tr>
        <td class="borderless" data-toggle="tooltip" title="Make sure email is correct">
          <%= f.text_field :email, :class => "org_form", :placeholder => "Enter email address" %>
        </td>
        <td class="borderless" data-toggle="tooltip" title="To make your email address visible to the public check this box">
          <%= f.check_box :publish_email %>
        </td>
      </tr>
      <tr>
        <td class="borderless" data-toggle="tooltip" title="Make sure url is correct">
          <%= f.text_field :website, :class => "org_form" %>
        </td>
        <td class="borderless">
          <input type="checkbox" disabled checked = "checked" value="">
        </td>
      </tr>
      <tr>
        <td class="borderless" data-toggle="tooltip" title="Make sure phone number is correct">
          <%= f.text_field :telephone, :class => "org_form" %>
        </td>
        <td class="borderless" data-toggle="tooltip" title="To make your telephone number visible to the public check this box">
          <%= f.check_box :publish_phone %>
        </td>
      </tr>
      <tr>
        <td class="borderless" data-toggle="tooltip" title="Please enter a website here either to the fundraising page on your website or to an online donation site.">
          <%= f.text_field :donation_info, :class => "org_form" %>
        </td>
        <td class="borderless">
          <input type="checkbox" disabled checked = "checked" value="">
        </td>
      </tr>
      <tr>
        <td class="borderless" >
          <div>
            <ol class='unstyled' >
          <%= charity_admin_display_msg %>
            </ol>
          </div>
        </td>
        <td class="borderless">
          <input type="checkbox" disabled checked = "checked" value="">
        </td>
      </tr>
      <tr>
        <td class="borderless" data-toggle="tooltip" title="Please enter the details of individuals from your organisation you would like to give permission to update your entry. E-mail addresses entered here will not be made public.">
          <%= text_field_tag 'organization_admin_email_to_add', value = nil, {:size => 100, class: 'org_form', :cols => "10", :rows => "3" } %>
        </td>
        <td class="borderless"></td>
      </tbody>
    </table>
    <div class="actions">
      <%= f.submit :class => 'btn btn-primary' %>
    </div>
<% end %>
